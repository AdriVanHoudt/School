<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical|center_horizontal"
        >

    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#B2CF0E"
            android:gravity="center_vertical|center_horizontal">

        <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                 android:text="@string/MC"
                 android:background="#B2CF0E"
                 android:textColor="#000000"
                 android:gravity="center"
                 android:id="@+id/title"
                 android:layout_centerHorizontal="true"/>

        <ImageView android:layout_height="100dp"
                   android:layout_width="100dp"
                   android:background="@drawable/audi"
                   android:contentDescription="@string/test"
                   android:id="@+id/audi"
                   android:layout_toRightOf="@+id/bwm"
                   android:layout_margin="2dp"
                   android:layout_below="@+id/title">
        </ImageView>
        <ImageView android:layout_height="100dp"
                   android:layout_width="100dp"
                   android:background="@drawable/aston"
                   android:contentDescription="@string/test"
                   android:layout_margin="2dp"
                   android:id="@+id/aston"
                   android:layout_below="@id/title"

                >
        </ImageView>
        <ImageView android:layout_height="100dp"
                   android:layout_width="100dp"
                   android:background="@drawable/bmw"
                   android:contentDescription="@string/test"
                   android:id="@+id/bwm"
                   android:layout_below="@+id/title"
                   android:layout_margin="2dp"
                   android:layout_toRightOf="@+id/aston">
        </ImageView>

        <ImageView android:layout_height="100dp"
                   android:layout_width="100dp"
                   android:background="@drawable/subaru"
                   android:contentDescription="@string/test"
                   android:id="@+id/subaru"
                   android:layout_margin="2dp"
                   android:layout_toRightOf="@+id/audi"
                   android:layout_below="@+id/title">
        </ImageView>




    </RelativeLayout>
</LinearLayout>

