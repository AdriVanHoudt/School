        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Omschrijving)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Omschrijving)
            @Html.ValidationMessageFor(model => model.Omschrijving)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IngeplandVanaf)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IngeplandVanaf)
            @Html.ValidationMessageFor(model => model.IngeplandVanaf)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IngeplandTot)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IngeplandTot)
            @Html.ValidationMessageFor(model => model.IngeplandTot)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Status)
        </div>
