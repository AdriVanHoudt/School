@model IEnumerable<Domain.POCO.Context>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Naam
        </th>
        <th>
            Omschrijving
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Naam, "Details", new { id = item.ContextID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Omschrijving)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ContextID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ContextID })
        </td>
    </tr>
}

</table>
